        <section class="contact-section bg-black" id="contact">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5">
                    <div class="col-md-4 mb-3 mb-md-0">
                        <div class="card py-4 h-100">
                            <div class="card-body text-center">
                                <i class="{{metadata.contact.address.icon}} text-primary mb-2"></i>
                                <h4 class="text-uppercase m-0">{{metadata.contact.address.title}}</h4>
                                <hr class="my-4 mx-auto" />
                                <div class="small text-black-50">{{metadata.contact.address.text}}</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3 mb-md-0">
                        <div class="card py-4 h-100">
                            <div class="card-body text-center">
                                <i class="{{metadata.contact.email.icon}} text-primary mb-2"></i>
                                <h4 class="text-uppercase m-0">{{metadata.contact.email.title}}</h4>
                                <hr class="my-4 mx-auto" />
                                <div class="small text-black-50"><a href="mailto:{{metadata.contact.email.text}}">{{metadata.contact.email.text}}</a></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3 mb-md-0">
                        <div class="card py-4 h-100">
                            <div class="card-body text-center">
                                <i class="{{metadata.contact.phone.icon}} text-primary mb-2"></i>
                                <h4 class="text-uppercase m-0">{{metadata.contact.phone.title}}</h4>
                                <hr class="my-4 mx-auto" />
                                <div class="small text-black-50"><a href="{{metadata.contact.phone.url}}">{{metadata.contact.phone.text}}</a></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="social d-flex justify-content-center">{% for m in metadata.social %}
                    <a class="mx-2" href="{{m.url}}" title="{{m.title}}"><i class="{{m.icon}}"></i></a>{% endfor %}
                </div>
            </div>
        </section>
